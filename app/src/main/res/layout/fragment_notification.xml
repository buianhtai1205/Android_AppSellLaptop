<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e8ed"
    tools:context=".fragment.NotificationFragment">

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:rotation="-30"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/notify_icon"
                app:tint="#5a5672" />

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Thông báo"
                android:layout_marginStart="20dp"
                android:textColor="#5a5672"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_marginStart="20dp"
                android:gravity="center"
                android:text="Mới"
                android:textColor="#5a5672"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:layout_marginStart="160dp"
                android:gravity="center"
                android:text="Đánh dấu đã đọc"
                android:textColor="#ef5353"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:background="@drawable/neumorphism"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp" >
            <ImageView
                android:layout_marginStart="25dp"
                android:layout_gravity="center"
                android:src="@drawable/user"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:paddingEnd="60dp"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Laptop Acer Nitro 5 đang giảm giá sốc, Mua ngay kẻo muộn."
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:background="@drawable/neumorphism"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp" >
            <ImageView
                android:layout_marginStart="25dp"
                android:layout_gravity="center"
                android:src="@drawable/user"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:paddingEnd="60dp"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Laptop Acer Nitro 5 đang giảm giá sốc, Mua ngay kẻo muộn."
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:background="@drawable/neumorphism"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp" >
            <ImageView
                android:layout_marginStart="25dp"
                android:layout_gravity="center"
                android:src="@drawable/user"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:paddingEnd="60dp"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Laptop Acer Nitro 5 đang giảm giá sốc, Mua ngay kẻo muộn."
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <Button
            android:layout_marginTop="15dp"
            android:layout_marginStart="100dp"
            android:background="@drawable/neumorphism"
            android:backgroundTint="#1bd57c"
            android:text="Xem tất cả"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />

    </LinearLayout>

</FrameLayout>